<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :level %>
  <%= select f, :level, ["student", "teacher", "admin"] %>
  <%= error_tag f, :level %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
