<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Author</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for reply <- @post_replies do %>
    <tr>
      <td><%= reply.content |> SchoolhubWeb.Gettext.first_line() %></td>
      <td><%= Schoolhub.Accounts.get_user!(reply.creator).name %></td>

      <td>
        <span><%= link "Show", to: Routes.course_post_reply_path(@conn, :show, @course_id, @post_id, reply) %></span>
        <span><%= link "Edit", to: Routes.course_post_reply_path(@conn, :edit, @course_id, @post_id, reply) %></span>
        <span><%= link "Delete", to: Routes.course_post_reply_path(@conn, :delete, @course_id, @post_id, reply), method: :delete, data: [confirm: "Are you sure?"] %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Reply", to: Routes.course_post_reply_path(@conn, :new, @course_id, @post_id) %></span>
