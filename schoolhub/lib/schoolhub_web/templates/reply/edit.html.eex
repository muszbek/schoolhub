<h1><%= link Schoolhub.Courses.get_course!(@course_id).name, to: Routing.route(:course_path, @conn, [:show, @course_id]) %></h1>
<h2>Edit Reply</h2>

<%= render "form.html", Map.put(assigns, :action, Routing.route(:course_post_reply_path, @conn, [:update, @course_id, @post_id, @reply])) %>

<span><%= link "Back", to: Routing.route(:course_post_reply_path, @conn, [:index, @course_id, @post_id]) %></span>
