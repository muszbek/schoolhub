<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= hidden_input f, :course_id, value: @course_id %>

  <%= label f, :content %>
  <%= textarea f, :content %>
  <%= error_tag f, :content %>

  <%= label f, :pinned %>
  <%= checkbox f, :pinned %>
  <%= error_tag f, :pinned %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
